%Basic page setup information
\newcommand{\recipe}[2][]{%
    \newpage
    \thispagestyle{fancy}
    \lhead{}%
    \chead{}%
    \rhead{}%
    \lfoot{}%
    \rfoot{}%
    \begin{center}
    	\section*{#2}%
    \if###1##%
    \else
            \testoneline{#1}%
    \fi
        \end{center}
}

%Header with serving and time information
\newcommand{\serves}[2][Serves]{%
    \chead{#1 #2}}

\newcommand{\preptime}[2][Prep time]{%
    \lhead{#1: #2}%
}
\newcommand{\cooktime}[2][Cook time]{%
    \rhead{#1: #2}%
}
